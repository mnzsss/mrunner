{
	"git": {
		"commitMessage": "chore(release): v${version}",
		"tagName": "v${version}",
		"tagAnnotation": "Release v${version}",
		"requireBranch": "master",
		"requireCleanWorkingDir": true,
		"requireUpstream": true,
		"push": true,
		"pushArgs": ["--follow-tags"]
	},
	"npm": {
		"publish": false
	},
	"github": {
		"release": false
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{ "type": "feat", "section": "Features" },
					{ "type": "fix", "section": "Bug Fixes" },
					{ "type": "perf", "section": "Performance Improvements" },
					{ "type": "refactor", "section": "Code Refactoring" },
					{ "type": "docs", "section": "Documentation" },
					{ "type": "chore", "hidden": true },
					{ "type": "style", "hidden": true },
					{ "type": "test", "hidden": true }
				]
			},
			"infile": "CHANGELOG.md",
			"header": "# Changelog\n\nAll notable changes to MRunner will be documented in this file.\n"
		}
	},
	"hooks": {
		"before:init": ["pnpm check"],
		"after:bump": ["bash release/bump-version.sh ${version}"],
		"after:release": "echo Successfully released v${version}!"
	}
}
