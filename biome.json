{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**",
			"!**/dist",
			"!src-tauri/gen",
			"!.claude"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useSemanticElements": "off",
				"noLabelWithoutControl": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"indentStyle": "tab"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		},
		"linter": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							{
								"source": [
									":PACKAGE:",
									":NODE:",
									"!@/**"
								],
								"type": true
							},
							[
								":PACKAGE:",
								":NODE:",
								"!@/**"
							],
							":BLANK_LINE:",
							{
								"source": "@/**",
								"type": true
							},
							"@/**",
							":BLANK_LINE:",
							{
								"source": ":ALIAS:",
								"type": true
							},
							":ALIAS:",
							":BLANK_LINE:",
							{
								"source": ":PATH:",
								"type": true
							},
							":PATH:"
						]
					}
				}
			}
		}
	}
}