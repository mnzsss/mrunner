{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "MRunner",
	"version": "0.0.7",
	"identifier": "com.mrunner.app",
	"build": {
		"beforeBuildCommand": "pnpm build",
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"frontendDist": "../../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "MRunner",
				"label": "main",
				"width": 640,
				"height": 560,
				"resizable": false,
				"fullscreen": false,
				"decorations": false,
				"transparent": false,
				"alwaysOnTop": true,
				"skipTaskbar": true,
				"center": true,
				"visible": false,
				"focus": true
			},
			{
				"title": "Configurações - MRunner",
				"label": "settings",
				"url": "/settings",
				"width": 600,
				"height": 400,
				"resizable": true,
				"fullscreen": false,
				"decorations": true,
				"transparent": false,
				"center": true,
				"visible": false
			}
		],
		"security": {
			"csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src ipc: http://ipc.localhost"
		}
	},
	"bundle": {
		"active": true,
		"createUpdaterArtifacts": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"endpoints": [
				"https://github.com/mnzsss/mrunner/releases/latest/download/latest.json"
			],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk5MkU4NTgwNTBFM0ZBQTUKUldTbCt1TlFnSVV1bWN2MXQyb0JqbVhTRG5SZThoNnVtSmlTMEtiZzlsWTlSZTA2SmxqK3FZMXEK"
		}
	}
}