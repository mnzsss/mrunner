{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "MRunner",
	"version": "0.0.0-beta.1",
	"identifier": "com.mrunner.app",
	"build": {
		"beforeBuildCommand": "pnpm build",
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"frontendDist": "../../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "MRunner",
				"label": "main",
				"width": 640,
				"height": 560,
				"resizable": false,
				"fullscreen": false,
				"decorations": false,
				"transparent": false,
				"alwaysOnTop": true,
				"skipTaskbar": true,
				"center": true,
				"visible": false,
				"focus": true
			}
		],
		"security": {
			"csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src ipc: http://ipc.localhost"
		}
	},
	"bundle": {
		"active": true,
		"targets": ["deb", "rpm"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
